<h1>
  <%= @restaurant.name%>
</h1>
<small>
  <%= link_to "Delete", restaurant_path(@restaurant), method: :delete, data: { confirm: "Are you sure?" } %>
</small>

<ul class="list-group">
  <li><%= @restaurant.name %></li>
  <li><%= @restaurant.address&.capitalize %></li>
  <li><%= @restaurant.category %></li>
  <% @restaurant.reviews.each do |review| %>
  <li class="list-group-item">
    <%= review.content %>
    <%= review.rating %>
  </li>
  <% end %>
</ul>

<br>
<%= link_to "Add a review to this restaurant", new_restaurant_review_path(@restaurant) %>
<% if true %>
<%= link_to "Return to all restaurants", restaurants_path %>
<% end %>
