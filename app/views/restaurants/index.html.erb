<h1>List of all the restaurants</h1>

<hr>

<ul class="list-group">
  <% @restaurants.each do |restaurant| %>
    <li class="list-group-item">
      <%= link_to restaurant.name, restaurant_path(restaurant) %>
      <%= link_to "See details", restaurant_path(restaurant), class: "btn btn-light"%>
    </li>
  <% end %>
</ul>

<br>

<%= link_to "Add a restaurant", new_restaurant_path, class: "btn btn-light" %>
